<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.TeamConnectActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            app:srcCompat="@drawable/white_back"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/lato_bold"
            android:text="Others"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_gray1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/state_govt_lo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="State Govt"
                        android:gravity="center"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/white"
                        android:background="@color/green"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/light_gray1"/>

                    <TextView
                        android:id="@+id/central_govt_lo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Central Govt"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black"
                        android:background="@color/white"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/light_gray1"/>

                    <TextView
                        android:id="@+id/arogya_badratha_lo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Arogya Bhadratha"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black"
                        android:background="@color/white"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/light_gray1"/>

                    <TextView
                        android:id="@+id/arogya_sree_lo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Arogya Sree"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black"
                        android:background="@color/white"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/light_gray1"/>

                    <TextView
                        android:id="@+id/ayushmanbhava_lo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Ayushmanbhava"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black"
                        android:background="@color/white"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/light_gray1"/>

                    <TextView
                        android:id="@+id/others_lo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Others"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black"
                        android:background="@color/white"/>

                </LinearLayout>


            </HorizontalScrollView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_gray1"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>